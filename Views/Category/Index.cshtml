@model IEnumerable<FlowerInventory.Models.Category>

@{
    ViewData["Title"] = "Flower Categories";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Category</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No categories found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th style="width: 180px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info text-white">Details</a>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
